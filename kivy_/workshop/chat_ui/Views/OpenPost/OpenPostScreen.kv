<OpenPostScreen>:
    md_bg_color:hex('#ECECEC')
    AnchorLayout:
        anchor_y: 'top'
        MDBoxLayout:
            id:open_post_box
            orientation: 'vertical'
            PostBox:
                id:header_post
                text:root.text
                focus_behavior:False
                elevation:5
                size_hint_y: None
                adaptive_height:True
                heart_plus_icon: 'heart-plus-outline'
                heart_remove_icon: 'heart-remove-outline'
                score: root.score
                radius: [dp(0),dp(0),dp(0),dp(0)]
            ScrollView:
                on_scroll_stop:root.loadComment(self)
                MDList:
                    id:comment_lst
            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_height:True
                md_bg_color:hex('#FFFFFF')
                padding:[dp(10),dp(0)]
                MDTextField:
                    id:comment_field
                    hint_text: "Comment"
                    font_name:angsanaNew
                    font_size:dp(25)
                    max_height: "100dp"
                    multiline:True
                    line_color_focus:hex('#000000')
                    text_color_focus:hex('#000000')
                    hint_text_color_focus:hex('#000000')
                AnchorLayout:
                    anchor_x:'right'
                    anchor_y:'center'
                    size_hint_x:None
                    width:self.children[0].width
                    MDIconButton:
                        icon:'send'
                        on_press:root.onSendComment()
