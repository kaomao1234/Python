#:set blue hex('#0001FC')
#:set white 1,1,1,1
<OnboardScreen>:
    md_bg_color:blue
    ScreenManager:
        id:onboard_manager
        MDScreen:
            name:'screen_1'
            MDLabel:
                text:'LATECH'
                theme_text_color: "Custom"
                font_size:42
                text_color:white
                size_hint_y:None
                pos_hint:{'center_y':0.8}
                height:self.texture_size[1]
                halign:'center'
            MDLabel:
                text:'TECH MARKET'
                theme_text_color: "Custom"
                font_size:12
                text_color:white
                size_hint_y:None
                pos_hint:{'center_y':0.76}
                height:self.texture_size[1]
                halign:'center'
            FitImage:
                source:'assets/images/Logo.png'
                size_hint:None,None
                size: '300dp','300dp'
                pos_hint:{'center_x':0.5,'center_y':0.53}
            MDBoxLayout:
                adaptive_size:True
                pos_hint:{'center_x':0.5,'center_y':0.3}
                radius:4
                md_bg_color:white
                MDRaisedButton:
                    text:"Let's start"
                    font_size:18
                    text_color:blue
                    theme_text_color: "Custom"
                    md_bg_color:0,0,0,0
                    size_hint:None,None
                    -width:root.width*0.85
                    on_press:root.switch_onboard_screen('left',0.2,'screen_2')
            MDFlatButton:
                text:"Skip for now"
                font_size:18
                text_color:white
                theme_text_color: "Custom"
                size_hint:None,None
                pos_hint:{'center_x':0.5,'center_y':0.15}
        MDScreen:
            name:'screen_2'
            MDTabs:
                size_hint_y:0.7
                pos_hint:{'center_y':0.6}
                tab_bar_height:0
                Tab:
                    text:'0'
                    FitImage:
                        source:'assets/images/Illustration1.png'
                        size_hint:None,None
                        size:334,250
                        pos_hint:{'center_x':0.5,'center_y':0.65}
                    MDLabel:
                        text:'The best tech market'
                        theme_text_color: "Custom"
                        font_size:24
                        text_color:white
                        size_hint_y:None
                        pos_hint:{'center_y':0.15}
                        height:self.texture_size[1]
                        halign:'center'
                Tab:
                    text:'1'
                    FitImage:
                        source:'assets/images/Illustration2.png'
                        size_hint:None,None
                        size:350,350
                        pos_hint:{'center_x':0.5,'center_y':0.6}
                    MDLabel:
                        text:'A lot of exclusive'
                        theme_text_color: "Custom"
                        font_size:24
                        text_color:white
                        size_hint_y:None
                        pos_hint:{'center_y':0.15}
                        height:self.texture_size[1]
                        halign:'center'
            
