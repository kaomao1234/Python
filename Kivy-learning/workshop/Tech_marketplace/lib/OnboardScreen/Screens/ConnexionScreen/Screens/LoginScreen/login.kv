<LoginScreen>:
    MDLabel:
        text:'Login'
        theme_text_color: "Custom"
        font_size:24
        text_color:white
        size_hint_y:None
        pos_hint:{'center_y':0.9}
        height:self.texture_size[1]
        halign:'center'
    MDBoxLayout:
        spacing:10
        adaptive_height:True
        orientation:'vertical'
        size_hint_x: 0.7
        pos_hint:{'center_x':0.5,'center_y':0.45}
        MDTextField:
            hint_text: "Email"
            mode: "rectangle"
            multiline:False
            font_size:15
            line_color_focus:white
            line_color_normal:white
            hint_text_color_normal:white
            hint_text_color_focus:white
            text_color_normal:white
            text_color_focus:white
            size_hint_x: 0.9
            pos_hint:{'center_x':0.5}
        MDTextField:
            hint_text: "Password"
            mode: "rectangle"
            multiline:False
            font_size:15
            line_color_focus:white
            line_color_normal:white
            hint_text_color_normal:white
            hint_text_color_focus:white
            text_color_normal:white
            text_color_focus:white
            size_hint_x: 0.9
            pos_hint:{'center_x':0.5}
    MDRaisedButton:
        text:"Validate"
        font_size:18
        text_color:blue
        theme_text_color: "Custom"
        md_bg_color:white
        size_hint:None,None
        -width:root.width*0.8
        pos_hint:{'center_x':0.5,'center_y':0.2}
    MDFlatButton:
        text:"Don't have any account? Sign-up"
        font_size:18
        size_hint_y: None
        theme_text_color: "Custom"
        halign:'center'
        text_color:yellow
        pos_hint:{'center_x':0.5,'center_y':0.1}
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.transition.duration = 0.2
            root.manager.current = 'register_screen'