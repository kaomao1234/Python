<ProductScreen>:
    MDBoxLayout:
        padding: [10,0]
        ScrollView:
            bar_width:0
            MDList:
                spacing:10
                MDIconButton:
                    icon:'arrow-left'
                    user_font_size: "40sp"
                    halign:'left'
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.transition.duration = 0.2
                        root.manager.current = 'categories_screen'
                MDLabel:
                    text:'Laptop'
                    text_size:self.size
                    size_hint_y: None
                    height:self.texture_size[1]
                    halign:'left'
                    font_size:24
                MDBoxLayout:
                    orientation:'horizontal'
                    adaptive_height:True
                    spacing:10
                    MDRectangleFlatButton:
                        text: "Ascending Price"
                        theme_text_color: "Custom"
                        text_color: hex('#A7A9BE')
                        line_color: hex('#A7A9BE')
                        font_size:14
                        -width:root.width*0.5
                    MDFlatButton:
                        text: "Filter"
                        theme_text_color: "Custom"
                        text_color:hex('#A7A9BE')
                        font_size:14
                        -width:root.width*0.5
                MDGridLayout:
                    id:lst_product
                    cols:2
                    adaptive_height:True
                    spacing:10
                    ProductCard:
                        text: "Surface laptop 3"
                        second_text: "USD 999"
                        img_source:'assets/images/Laptop/Surface laptop.png'
                    ProductCard:
                        text:'XPS laptop 13'
                        second_text:'USD 899'
                        img_source:'assets/images/Laptop/OriginalPng 1.png'
                    ProductCard:
                        text:'LG Gram 17'
                        second_text:'USD 1399'
                        img_source:'assets/images/Laptop/Lg gram.png'
                    ProductCard:
                        text:'Macbook pro 13'
                        second_text:'USD 1299'
                        img_source:'assets/images/Laptop/Macbook.png'
                    ProductCard:
                        text:'MateBook 13'
                        second_text:'USD 949'
                        img_source:'assets/images/Laptop/Huawei.png'
                    