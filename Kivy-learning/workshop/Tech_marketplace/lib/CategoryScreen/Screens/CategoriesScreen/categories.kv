<CategoriesScreen>:
    MDBoxLayout:
        orientation:'vertical'
        spacing:10
        padding: [10,0]
        MDIconButton:
            icon:'arrow-left'
            user_font_size: "40sp"
            halign:'left'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = 0.2
                root.manager.current = 'home_screen'
        Label:
            markup:True
            color:0,0,0,1
            text:'Categories'
            font_size:25
            size_hint: None,None
            size:self.texture_size
        ScrollView:
            pos_hint:{'center_y':0.43}
            MDList:
                id:cat_lst
                spacing:10
                MDRaisedButton:
                    text:'All'
                    halign:'left'
                    theme_text_color: "Custom"
                    elevation:10
                    font_size:18
                    padding_x:[50,0]
                    size_hint: None,None
                    md_bg_color:1,1,1,1
                    text_color:black
                    -width:root.width
                    -height:root.height*.12
                MDRaisedButton:
                    text:'Computers'
                    font_size:18
                    halign:'left'
                    padding_x:[50,0]
                    theme_text_color: "Custom"
                    elevation:10
                    size_hint: None,None
                    md_bg_color:1,1,1,1
                    text_color:black
                    -width:root.width
                    -height:root.height*.12
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.transition.duration = 0.2
                        root.manager.current = 'product_screen'
                        root.manager.ids.product_screen.on_start()
                MDRaisedButton:
                    text:'Accessories'
                    font_size:18
                    halign:'left'
                    padding_x:[50,0]
                    theme_text_color: "Custom"
                    elevation:10
                    size_hint: None,None
                    md_bg_color:1,1,1,1
                    text_color:black
                    -width:root.width
                    -height:root.height*.12
                MDRaisedButton:
                    text:'Smartphones'
                    font_size:18
                    halign:'left'
                    padding_x:[50,0]
                    theme_text_color: "Custom"
                    elevation:10
                    size_hint: None,None
                    md_bg_color:1,1,1,1
                    text_color:black
                    -width:root.width
                    -height:root.height*.12
                MDRaisedButton:
                    text:'Smart objects'
                    font_size:18
                    halign:'left'
                    padding_x:[50,0]
                    theme_text_color: "Custom"
                    elevation:10
                    size_hint: None,None
                    md_bg_color:1,1,1,1
                    text_color:black
                    -width:root.width
                    -height:root.height*.12
                MDRaisedButton:
                    text:'Speakers'
                    font_size:18
                    halign:'left'
                    padding_x:[50,0]
                    theme_text_color: "Custom"
                    elevation:10
                    size_hint: None,None
                    md_bg_color:1,1,1,1
                    text_color:black
                    -width:root.width
                    -height:root.height*.12


