<SocialScreen>:
    MDBottomNavigation:
        panel_color: hex("#ffffff")
        text_color_active: 0, 0, 0, 1
        use_text: False 
        text_color_normal:[0.1843137254901961, 0.5019607843137255, 0.9294117647058824,0.5]
        text_color_active:hex("#2F80ED")
        MDBottomNavigationItem:
            name: 'screen 1'
            icon: 'collapse-all-outline'
            badge_icon: "numeric-10"
            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color:hex("#ffffff")
                MDToolbar:
                    title: "Public"
                    md_bg_color: hex("#2F80ED")
                    type_height:'small'
                MDLabel:
                    text: "Social"
                    halign: 'center'
                    theme_text_color: 'Primary'
                    font_style: 'H6'
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'top'
                padding: dp(20),dp(10)
                MDSwitch:
                    theme_thumb_color: 'Custom'
                    theme_thumb_down_color: 'Custom'
                    thumb_color: hex("#ffffff")
                    thumb_color_down: hex("#ffffff")
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                padding: dp(10),dp(10)
                MDIconButton:
                    icon: 'pencil-outline'
                    theme_icon_color: "Custom"
                    icon_size: dp(30)
                    icon_color:hex("#FFFAFA")
                    md_bg_color:hex("#2F80ED")

        MDBottomNavigationItem:
            name: 'screen 2'
            icon: 'bell-outline'
            badge_icon: "numeric-5"
            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color:hex("#ffffff")
                MDToolbar:
                    title: "Notifications"
                    md_bg_color: hex("#2F80ED")
                    type_height:'small'
                MDLabel:
                    text: 'Notifications'
                    halign: 'center'
        MDBottomNavigationItem:
            name: 'screen 3'
            icon: 'message-outline'
            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color:hex("#ffffff")
                MDToolbar:
                    title: "Chats"
                    md_bg_color: hex("#2F80ED")
                    type_height:'small'
                MDLabel:
                    text: 'Chats'
                    halign: 'center'
        MDBottomNavigationItem:
            name: 'screen 4'
            icon: 'home-edit-outline'
            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color:hex("#ffffff")
                MDLabel:
                    text: 'Profile'
                    halign: 'center'