<Chat>:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Label:
                text: "User"
                size_hint_y: None
                height: dp(40)
                font_size: 18
            BoxLayout:
                id:client_list
                orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.7
            Label:
                text: "Chat"
                size_hint_y: None
                height: dp(40)
                font_size: 18
            RecycleView:
                id:chat_list
                bar_width: dp(10)
                bar_color: 0,0,0,0
                viewclass: 'ChatItem'
                canvas.before:
                    Color:
                        rgb: 236/255, 240/255, 241/255
                    Rectangle:
                        size: self.size
                        pos:self.pos
                RecycleBoxLayout:
                    default_size: None, None
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(5)
                    padding:[dp(20),dp(10),dp(20),dp(20)]
            BoxLayout:
                size_hint_y: 0.2
                orientation: 'horizontal'
                TextInput:
                    id:chat_input
                    hint_text: "Type here"
                    multiline: True
                    on_text_validate: root.on_text(self, self.text)
                Button:
                    text: "Send"
                    size_hint_x: None
                    width: dp(50)
                    on_press: root.send_message(root.ids.chat_input.text,root.ids.chat_list,root.ids.chat_input)