<SocialScreen>:
    MDBottomNavigation:
        text_color_active: 0, 0, 0, 1
        use_text: False 
        text_color_normal:[0.1843137254901961, 0.5019607843137255, 0.9294117647058824,0.5]
        text_color_active:hex("#2F80ED")
        MDBottomNavigationItem:
            name: 'screen 1'
            icon: 'collapse-all-outline'
            badge_icon: "numeric-10"
            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color:hex('#ECECEC')
                MDToolbar:
                    title: "Public"
                    md_bg_color: hex("#2F80ED")
                    type_height:'small'
                RecycleView:
                    id:rv
                    viewclass:'PostBox'
                    RecycleBoxLayout:
                        default_size: None,None
                        default_size_hint: 1, None
                        size_hint_y: None
                        spacing: dp(10)
                        padding:[dp(10),dp(10)]
                        heigth: self.minimum_height
                        orientation: 'vertical'
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                padding: dp(10),dp(10)
                MDIconButton:
                    icon: 'pencil-outline'
                    theme_icon_color: "Custom"
                    icon_size: dp(30)
                    icon_color:hex("#FFFAFA")
                    md_bg_color:hex("#2F80ED")
        MDBottomNavigationItem:
            name: 'screen 2'
            icon: 'bell-outline'
            badge_icon: "numeric-5"
            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color:hex("#ffffff")
                MDToolbar:
                    title: "Notifications"
                    md_bg_color: hex("#2F80ED")
                    type_height:'small'
                MDLabel:
                    text: 'Notifications'
                    halign: 'center'
        MDBottomNavigationItem:
            name: 'screen 3'
            icon: 'message-outline'
            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color:hex("#ffffff")
                MDToolbar:
                    title: "Chats"
                    md_bg_color: hex("#2F80ED")
                    type_height:'small'
                MDLabel:
                    text: 'Chats'
                    halign: 'center'
        MDBottomNavigationItem:
            name: 'screen 4'
            icon: 'home-edit-outline'
            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color:hex("#ffffff")
                MDLabel:
                    text: 'Profile'
                    halign: 'center'
