#: import Window kivy.core.window.Window
<PromoteCard>:
    height:Window.height*0.15
    size_hint_x:None
    width:Window.width*0.95
    TwoLineListItem:
        height:Window.height*0.15
        text:root.text
        _no_ripple_effect:True
        text_color:white
        md_bg_color:blue
        theme_text_color:'Custom'
        secondary_theme_text_color:'Custom'
        secondary_text:root.second_text
        secondary_text_color:white
        RightContainer:
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'center'
                Image:
                    source:root.img_source
                    size_hint:None,0.6
    MDFlatButton:
        id:back_btn
        pos_hint:{'center_x':0.5,'center_y':0.5}
        size_hint:1, 1