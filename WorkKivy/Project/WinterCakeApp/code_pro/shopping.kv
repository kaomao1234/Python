<ShopScreen@MDScreen>:
    name:'shop_screen'
    black:0, 0, 0, 1
    copper_rust:get_color_from_hex("#9b4f4f")
    white:get_color_from_hex("#ffffff")
    weathered_stone:get_color_from_hex("#c4c4c4")
    sukhumvit_font:'SukhumvitSet-Medium'
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            orientation:'vertical'
            md_bg_color:root.copper_rust
            size_hint_y:None
            height:85
            padding:[30,10]
            Label:
                text:"หน้าหลัก"
                font_name:root.sukhumvit_font
                halign:'center'
                font_size:20
                markup:True
                color:root.white
                text_size:self.size
                size_hint_y:None
            MDBoxLayout:
                size_hint_y:None
                height:40
                padding:[18,0]
                radius:[15,15]
                orientation:'horizontal'
                md_bg_color:root.white
                MDTextField:
                    size_hint_y:None
                    -height:50
                    id:t_widget
                    text_color:root.black
                    line_color_focus: root.weathered_stone
                MDIconButton:
                    size_hint: None,None
                    icon:"magnify"
                    user_font_size:"18dp"
                    theme_text_color: "Custom"
                    text_color:root.copper_rust
        ScrollView:
            MDGridLayout:
                id:shop_view
                size_hint_y:None
                height:self.minimum_height
                row_default_height: 140
                cols:2
        MDBoxLayout:
            orientation:'horizontal'
            size_hint_y:None
            height:50
            line_color:root.copper_rust
            padding:[0,0]
            MDBoxLayout:
                orientation:'vertical'
                AnchorLayout:
                    size_hint_y:None
                    height:23
                    anchor_x: 'center'
                    MDIconButton:
                        size_hint: None,None 
                        icon:'store-plus'
                        user_font_size:"20dp"
                        theme_text_color: "Custom"
                        text_color:root.copper_rust
                Label:
                    height:20
                    size_hint_y:None
                    text:'รถเข็น'
                    font_name:root.sukhumvit_font
                    markup:True
                    font_size:14
                    halign:'center'
                    color:root.copper_rust
                    text_size:self.size
            MDBoxLayout:
                orientation:'vertical'
                AnchorLayout:
                    size_hint_y:None
                    height:23
                    anchor_x: 'center'
                    MDIconButton:
                        size_hint: None,None 
                        icon:'home-circle-outline'
                        user_font_size:"20dp"
                        theme_text_color: "Custom"
                        text_color:root.copper_rust
                Label:
                    height:20
                    size_hint_y:None
                    text:'โฮม'
                    font_name:root.sukhumvit_font
                    markup:True
                    font_size:14
                    halign:'center'
                    color:root.copper_rust
                    text_size:self.size
            MDBoxLayout:
                orientation:'vertical'
                AnchorLayout:
                    size_hint_y:None
                    height:23
                    anchor_x: 'center'
                    MDIconButton:
                        size_hint: None,None 
                        icon:'account-circle-outline'
                        user_font_size:"20dp"
                        theme_text_color: "Custom"
                        text_color:root.copper_rust
                Label:
                    height:20
                    size_hint_y:None
                    text:'บัญชี'
                    font_name:root.sukhumvit_font
                    markup:True
                    font_size:14
                    halign:'center'
                    color:root.copper_rust
                    text_size:self.size