#:import Window kivy.core.window.Window
#: import get_color_from_hex kivy.utils.get_color_from_hex
<Sign_in@MDScreen>:
    name:'sign_in'
    id:sign_in
    black:0,0,0,1
    copper_rust:get_color_from_hex("#9b4f4f")
    white:get_color_from_hex("#ffffff")
    weathered_stone:get_color_from_hex("#c4c4c4")
    radius:[dp(30),dp(30),dp(0),dp(0)]
    MDBoxLayout:
        orientation:'vertical'
        spacing:10
        padding:[30,15]
        MDBoxLayout:
            orientation:'horizontal'
            size_hint_y:None
            height:22
            AnchorLayout:
                size_hint_y:None
                height:22
                id:Line_one
                anchor_y:"top"
                canvas:
                    Color:
                        rgba:get_color_from_hex("#9b4f4f")
                    Line:
                        width:1
                        rectangle:(Line_one.x,Line_one.y+Line_one.height/2,self.width,0)
            Label:
                font_size: 16
                size_hint_x:None
                size_hint_y:None
                text:"SIGN IN"
                height:22
                color:root.copper_rust
                markup:True
                valign:"center"
            AnchorLayout:
                id:Line_two
                height:22
                size_hint_y:None
                anchor_y:"top"
                canvas:
                    Color:
                        rgba:get_color_from_hex("#9b4f4f")
                    Line:
                        width:1
                        rectangle:(Line_two.x,Line_two.y+Line_two.height/2,self.width,0)
        Label:
            size_hint_y:None
            height:16
            text:"Username"
            font_size:"14dp"
            color:root.black
            markup:True
            halign:'left'
            text_size:self.size
        MDTextField:
            size_hint_y:None
            id:usename_field
            text:"Hello world"
            text_color:root.black
            # text_color_normal:root.black
            # text_color_focus:root.black
            line_color_focus:root.copper_rust
        Label:
            height:16
            size_hint_y:None
            text:"Password"
            font_size:"14dp"
            color:root.black
            markup:True
            halign:'left'
            text_size:self.size
        GridLayout:
            cols:2
            size_hint_y:None
            height:37
            MDTextField:
                size_hint_y:None
                id:password_field
                text:"Hello world"
                password:True
                text_color:root.black
                # text_color_focus:root.black
                # text_color_normal:root.black
                line_color_focus:root.copper_rust
            MDIconButton:
                size_hint_y:None
                id:eye_pass
                icon:"eye-off"
        GridLayout:
            cols:2
            AnchorLayout:
                anchor_x:'center'
                MDFillRoundFlatButton:
                    size_hint:None,None
                    text:"Sign In"
                    -height:42
                    -width:144
                    font_size:"14dp"
                    md_bg_color:root.copper_rust
                    on_press:root.next_shop_page()
            AnchorLayout:
                anchor_x:'center'
                MDFillRoundFlatButton:
                    size_hint:None,None
                    text:"Sign Up"
                    -height:42
                    -width:144
                    font_size:"14dp"
                    md_bg_color:root.copper_rust
                    on_press:root.next_sign_up()
                        
        AnchorLayout:
            anchor_x:'center'
            MDFlatButton:
                text:"[i]Forgot Password?[/i]"
                theme_text_color: "Custom"
                text_color:root.copper_rust
                size_hint_y:None
                -height:38