#:import Window kivy.core.window.Window
<Sign_up@MDScreen>
    black:0,0,0,1
    copper_rust:get_color_from_hex("#9b4f4f")
    white:get_color_from_hex("#ffffff")
    weathered_stone:get_color_from_hex("#c4c4c4")
    md_bg_color:self.white
    id:sign_up_id
    name:'sign_up_page'
    MDFillRoundFlatIconButton:
        icon:'arrow-expand-left'
        text:'back'
        -height:69
        y:Window.height-self.height
        on_press: 
            root.manager.transition.direction = 'right'
            root.manager.transition.duration = 0.5
            root.manager.current = 'sign_in_page'
    MDBoxLayout:
        orientation:'vertical'
        spacing:10
        padding:[30,0]
        MDBoxLayout:
            orientation:'horizontal'
            size_hint_y:None
            height:22
            AnchorLayout:
                size_hint_y:None
                height:22
                id:Line_one
                anchor_y:"top"
                canvas:
                    Color:
                        rgba:get_color_from_hex("#9b4f4f")
                    Line:
                        width:1
                        rectangle:(Line_one.x,Line_one.y+Line_one.height/2,self.width,0)
            Label:
                id:ls
                font_size: 16
                size_hint_x:None
                size_hint_y:None
                text:"SiGN IN"
                height:22
                color:root.copper_rust
                markup:True
                valign:"center"
            AnchorLayout:
                id:Line_two
                height:22
                size_hint_y:None
                anchor_y:"top"
                canvas:
                    Color:
                        rgba:get_color_from_hex("#9b4f4f")
                    Line:
                        width:1
                        rectangle:(Line_two.x,Line_two.y+Line_two.height/2,self.width,0)
            Label:
                size_hint_y:None
                height:16
                text:"Username"
                font_size:"14dp"
                color:root.black
                markup:True
                halign:'left'
                text_size:self.size
            
