<TwoLineInput>:
    size_hint_y:None
    height:61
    MDRelativeLayout:
        size_hint_y:None
        height:line_text.height
        MDTextField:
            id:line_text
            cursor_color:root.cursor_color
            line_color_focus:root.under_line_color
            line_color_normal:root.under_line_color
            text_color_focus:root.text_color
            text_color_normal:root.text_color
            on_text:root.bind_text if root.bind_text != None else None
            multiline:False
            font_size:root.font_size
    MDLabel:
        id:helper_text
        pos_hint:{'center_y':0.1}
        size_hint_y:None
        height:self.texture_size[1]
        theme_text_color: "Custom"
        text: root.helper_text
        font_name: root.helper_font_name
        font_size: 14
        text_color:root.helper_color
        on_text:root.helper_bind_text if root.bind_text != None else None