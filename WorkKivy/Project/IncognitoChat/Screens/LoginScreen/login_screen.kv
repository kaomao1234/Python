<LoginScreen>:
    white:hex("#FAFAFA")
    sukhumvit_font:'assets/fonts/SukhumvitSet-Medium.ttf'
    barlow_font:'assets/fonts/Barlow/Barlow-Black.ttf'
    encode_sansemi_bold_font:'assets/fonts/Encode_Sans_Semi_Expanded/EncodeSansSemiExpanded-SemiBold.ttf'
    encode_sansemi_font:'assets/fonts/Encode_Sans_Semi_Expanded/EncodeSansSemiExpanded-Black.ttf'
    black:0,0,0,1
    MDRelativeLayout:
        size_hint_y:0.1
        pos_hint:{'center_y':0.85,'center_x':0.1}
        canvas.after:
            Color:
                rgb:hex("#FAFAFA")
            Line:
                width:1
                rounded_rectangle:(self.x,self.y,self.width,self.height,30,30,30,30)
        MDLabel:
            text:'Welcome'
            size:self.texture_size
            font_size:24
            size_hint_y:0.1
            halign:'center'
            theme_text_color: "Custom"
            pos_hint:{'center_x':0.75,'center_y':0.5}
            text_color:root.white
    MDBoxLayout:
        orientation:'vertical'
        pos_hint:{'center_x':0.5,'center_y':0.6}
        size_hint: 0.75,0.3
        spacing:15
        padding:[20,30]
        canvas.before:
            Color:
                rgba:[0.17647058823529413, 0.23137254901960785, 0.3764705882352941, 0.7]
            RoundedRectangle:
                pos:self.pos
                size:self.size
                radius:[20,20,20,20]
        MDLabel:
            text:'Username'
            font_size:12
            font_name: root.encode_sansemi_font
            theme_text_color: "Custom"
            text_color:root.white
        MDRelativeLayout:
            size_hint_y:None
            height:self.children[0].height
            MDTextField:
                text_color_normal:root.white
                text_color_focus:root.white
                line_color_focus:root.white
                line_color_normal:root.white
        MDLabel:
            font_name: root.encode_sansemi_font
            text:'Password'
            font_size:12
            theme_text_color: "Custom"
            text_color:root.white
        MDRelativeLayout:
            size_hint_y:None
            height:self.children[0].height
            MDTextField:
                text_color_normal:root.white
                text_color_focus:root.white
                line_color_focus:root.white
                line_color_normal:root.white
    MDBoxLayout:
        orientation:'vertical'
        size_hint_x:0.6
        adaptive_height:True
        pos_hint:{'center_x':0.5,'center_y':0.25}
        spacing:20
        MDBoxLayout:
            adaptive_height:True
            size_hint_x:None
            width:250
            orientation:'horizontal'
            pos_hint:{"center_x":0.5}
            padding:[20,0]
            MDIconButton:
                icon: 'assets/icons/GoogleBtn.png'
                user_font_size: "15sp"
                size_hint_x:None
            Label:
                text:'OR'
                size:self.texture_size
                font_size: 14
                halign:'center'
            MDIconButton:
                icon: 'assets/icons/FacebookBtn.png'
                user_font_size: "15sp"
                size_hint_x:None
        MDRoundFlatButton:
            text:'Login'
            -width:root.width*0.5
            size_hint:None,None
            pos_hint:{'center_x':0.5}
            text_color:root.white
            line_color:root.white
            font_size:15
        MDLabel:
            size_hint_y:None
            height:self.texture_size[1]
            halign:'center'
            font_size:12
            text:"Don't have an account ?"
            theme_text_color: "Custom"
            text_color:root.white
        MDRoundFlatButton:
            size_hint: None, None
            -width:root.width*0.5
            pos_hint:{'center_x':0.5}
            line_color:root.white
            text_color:root.white
            text:'Register'
            font_size:15
            on_press:root.on_screen()