<MenuScreen@MDScreen>:
    name:'menu_screen'
    sukumvit_font:'font/SukhumvitSet-Medium'
    black:get_color_from_hex("#000000")
    dr_white:get_color_from_hex("#FAFAFA")
    red:(1.0, 0.0, 0.0, 1.0)
    MDBoxLayout:
        orientation: 'vertical'
        padding:[20,20]
        MDBoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: get_color_from_hex("#000000")
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            MDBoxLayout:
                orientation:'horizontal'
                size_hint_y:None
                height:52
                canvas:
                    Color:
                        rgba: get_color_from_hex("#000000")
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width,0
                AnchorLayout:
                    anchor_x: 'center'
                    MDIconButton:
                        icon:'arrow-collapse-left'
                        theme_text_color: "Custom"
                        text_color:root.black
                        on_press: 
                            root.manager.transition.direction = 'right'
                            root.manager.transition.duration = 0.2
                            root.manager.current = 'table_screen'
                            root.reset_menu_number()
                MDLabel:
                    size_hint_y:None
                    -height:52
                    text: 'Menu'
                    halign:'center'
                    theme_text_color:'Custom'
                    text_color:root.black
                    font_style:'H6'
                    font_name: root.sukumvit_font
                MDLabel:
                    size_hint_y:None
                    -height:52
                    text: 'โต๊ะที่ {}'.format(root.table_no)
                    halign:'center'
                    theme_text_color:'Custom'
                    text_color:root.black
                    font_style:'H6'
                    font_name: root.sukumvit_font
            MDBoxLayout:
                orientation: 'vertical'
                padding:[10,10]
                ScrollView:
                    MDList:
                        spacing:10
                        id:menulst
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y:None
                height:40
                canvas:
                    Color:
                        rgba: get_color_from_hex("#000000")
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width,40
                MDLabel:
                    size_hint_y:None
                    size: self.texture_size
                    text: 'ราคาทั้งหมด'.format(root.table_no)
                    halign:'center'
                    valign:'center'
                    theme_text_color:'Custom'
                    text_color:root.black
                    font_style:'H6'
                    font_name: root.sukumvit_font
                MDLabel:
                    id:total
                    size_hint_y:None
                    size: self.texture_size
                    text: '0'
                    halign:'center'
                    valign:'center'
                    theme_text_color:'Custom'
                    text_color:root.black
                    font_style:'H5'
                    font_name: root.sukumvit_font
                MDLabel:
                    size_hint_y:None
                    size: self.texture_size
                    text: 'บาท'
                    halign:'center'
                    valign:'center'
                    theme_text_color:'Custom'
                    text_color:root.black
                    font_style:'H5'
                    font_name: root.sukumvit_font
            AnchorLayout:
                anchor_x: 'center'
                padding:[0,10]
                size_hint_y:None
                height: dp(60)
                canvas:
                    Color:
                        rgba: get_color_from_hex("#000000")
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width,60
                MDRoundFlatButton:
                    text: "ตกลง"
                    on_press: root.on_press()
                    text_color: root.black
                    line_color:root.black
                    font_name:root.sukumvit_font
                    font_style:'H6'
                    size_hint: None, None
                    -height:40
                    -width:250