<CheckBillScreen@MDScreen>:
    sukumvit_font:'font/SukhumvitSet-Medium'
    black:get_color_from_hex("#000000")
    dr_white:get_color_from_hex("#FAFAFA")
    name:'checkbill_screen'
    MDBoxLayout:
        orientation: 'vertical'
        padding:[20,20]
        MDBoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: get_color_from_hex("#000000")
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            MDBoxLayout:
                orientation:'horizontal'
                size_hint_y:None
                height:52
                canvas:
                    Color:
                        rgba: get_color_from_hex("#000000")
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width,0
                AnchorLayout:
                    anchor_x: 'center'
                    MDIconButton:
                        icon:'arrow-collapse-left'
                        theme_text_color: "Custom"
                        text_color:root.black
                        on_press: root.back_click()
                MDLabel:
                    size_hint_y:None
                    -height:52
                    text: 'เช็คบิล'
                    halign:'center'
                    theme_text_color:'Custom'
                    text_color:root.black
                    font_style:'H6'
                    font_name: root.sukumvit_font
                MDLabel:
                    size_hint_y:None
                    -height:52
                    text: 'โต๊ะที่ {}'.format(root.table_no)
                    halign:'center'
                    theme_text_color:'Custom'
                    text_color:root.black
                    font_style:'H6'
                    font_name: root.sukumvit_font
            MDBoxLayout:
                orientation: 'vertical'
                padding:[20,15]
                MDBoxLayout:
                    orientation: 'vertical'
                    canvas:
                        Color:
                            rgba: get_color_from_hex("#000000")
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height
                    MDLabel:
                        size_hint_y:None
                        -height:52
                        text: 'ใบเสร็จรับเงิน'
                        halign:'center'
                        theme_text_color:'Custom'
                        text_color:root.black
                        font_style:'H6'
                        font_name: root.sukumvit_font
                    MDSeparator:
                        height: "1dp"
                        md_bg_color:root.black
                    ScrollView:
                        MDList:
                            id:menu_list
                            padding:[10,10]
                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y:None
                        height:50
                        canvas:
                            Color:
                                rgba: get_color_from_hex("#000000")
                            Line:
                                width: 1
                                rectangle: self.x, self.y, self.width,40
                        MDLabel:
                            size_hint_y:None
                            size: self.texture_size
                            text: 'ราคาทั้งหมด'.format(root.table_no)
                            halign:'center'
                            valign:'center'
                            theme_text_color:'Custom'
                            text_color:root.black
                            font_style:'H5'
                            font_name: root.sukumvit_font
                        MDLabel:
                            id:total
                            size_hint_y:None
                            size: self.texture_size
                            text: '0'
                            halign:'center'
                            valign:'center'
                            theme_text_color:'Custom'
                            text_color:root.black
                            font_style:'H5'
                            font_name: root.sukumvit_font
                        MDLabel:
                            size_hint_y:None
                            size: self.texture_size
                            text: 'บาท'
                            halign:'center'
                            valign:'center'
                            theme_text_color:'Custom'
                            text_color:root.black
                            font_style:'H5'
                            font_name: root.sukumvit_font
            AnchorLayout:
                anchor_x: 'center'
                size_hint_y: None
                MDRoundFlatButton:
                    text: "ยืนยัน"
                    text_color: root.black
                    line_color:root.black
                    font_name:root.sukumvit_font
                    font_style:'H6'
                    size_hint: None, None
                    on_press:root.on_press()
                    -height:40
                    -width:250