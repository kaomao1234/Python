#: import get_color_from_hex kivy.utils.get_color_from_hex
#: import TableCard module.TableCard.TableCard
#: import pprint pprint.pprint
<TableScreen@MDScreen>:
    sukumvit_font:'font/SukhumvitSet-Medium'
    name:'table_screen'
    black:get_color_from_hex("#000000")
    white:get_color_from_hex("#FFFFFF")
    dr_white:get_color_from_hex("#FAFAFA")
    MDBoxLayout:
        orientation: 'vertical'
        padding:[20,20]
        MDBoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: get_color_from_hex("#000000")
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            MDToolbar:
                md_bg_color:root.dr_white
                title: "CafeHeap"
                left_action_items:[['arrow-collapse-left',lambda x : root.back_onPress()]]
                specific_text_color:root.black
            MDSeparator:
                height: "1dp"
                md_bg_color:root.black
            ScreenManager:
                id:table_manager
                MDScreen:
                    name:'screen_1'
                    RecycleView:
                        id:tablelst
                        viewclass:'TableCard'
                        RecycleBoxLayout:
                            spacing: '10dp'
                            orientation: 'vertical'
                            default_size_hint: 1,None
                            size_hint_y: None
                            padding: [10,10]
                            height: self.minimum_height
                            default_size: None, 72
                            on_touch_move:print(self.children)
                MDScreen:
                    name:'screen_2'
                    MDBoxLayout:
                        orientation: 'vertical'
                        padding:[10,10]
                        RecycleView:
                            id:billlst
                            viewclass:'BillCard'
                            RecycleBoxLayout:
                                spacing: '10dp'
                                orientation: 'vertical'
                                default_size_hint: 1,None
                                size_hint_y: None
                                padding: [10,10]
                                height: self.minimum_height
                                default_size: None, 72

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y:None
                height:50
                canvas:
                    Color:
                        rgba: get_color_from_hex("#000000")
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width,50
                AnchorLayout:
                    anchor_x: 'center'
                    MDFlatButton:
                        text:'จองโต๊ะ'
                        font_size:20
                        size_hint_x: None
                        -width:self.parent.width
                        theme_text_color: "Custom"
                        text_color:root.black
                        font_name:root.sukumvit_font
                        on_press:
                            root.ids.table_manager.transition.direction = 'right'
                            root.ids.table_manager.transition.duration = 0.2
                            root.ids.table_manager.current = 'screen_1'
                AnchorLayout:
                    anchor_x: 'center'
                    MDFlatButton:
                        text:'เช็คบิล'
                        font_size:20
                        size_hint_x: None
                        -width:self.parent.width
                        theme_text_color: "Custom"
                        text_color:root.black
                        font_name:root.sukumvit_font
                        on_press:
                            root.ids.table_manager.transition.direction = 'left'
                            root.ids.table_manager.transition.duration = 0.2
                            root.ids.table_manager.current = 'screen_2'