<RegisterScreen>:
    MDLabel:
        text:'Create an anccount'
        theme_text_color: "Custom"
        font_size:24
        text_color:white
        size_hint_y:None
        pos_hint:{'center_y':0.9}
        height:self.texture_size[1]
        halign:'center'
    MDBoxLayout:
        orientation:'vertical'
        size_hint_x: 0.7
        adaptive_height:True
        pos_hint:{'center_x':0.5,'center_y': 0.5}
        spacing:10
        MDTextField:
            hint_text: "Full name"
            mode: "rectangle"
            multiline:False
            font_size:15
            line_color_focus:white
            line_color_normal:white
            hint_text_color_normal:white
            hint_text_color_focus:white
            text_color_normal:white
            text_color_focus:white
            size_hint_x: 0.9
            pos_hint:{'center_x':0.5}
        MDTextField:
            hint_text: "Email"
            mode: "rectangle"
            multiline:False
            font_size:15
            line_color_focus:white
            line_color_normal:white
            hint_text_color_normal:white
            hint_text_color_focus:white
            text_color_normal:white
            text_color_focus:white
            size_hint_x: 0.9
            pos_hint:{'center_x':0.5}
        MDTextField:
            hint_text: "Password"
            mode: "rectangle"
            multiline:False
            font_size:15
            line_color_focus:white
            line_color_normal:white
            hint_text_color_normal:white
            hint_text_color_focus:white
            text_color_normal:white
            text_color_focus:white
            size_hint_x: 0.9
            pos_hint:{'center_x':0.5}
    MDRaisedButton:
        text:"Validate"
        font_size:18
        text_color:blue
        theme_text_color: "Custom"
        md_bg_color:white
        size_hint:None,None
        -width:root.width*0.8
        pos_hint:{'center_x':0.5,'center_y':0.2}
    MDFlatButton:
        text:'Already have an account ? Login'
        font_size:18
        size_hint_y: None
        theme_text_color: "Custom"
        halign:'center'
        text_color:yellow
        pos_hint:{'center_x':0.5,'center_y':0.1}
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.transition.duration = 0.2
            root.manager.current = 'connect_screen'