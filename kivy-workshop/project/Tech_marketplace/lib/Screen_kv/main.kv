<MainScreen>:
    MDBottomNavigation:
        panel_color: hex("#EFF5FB")
        selected_color_background: hex("#0001FC")
        text_color_normal:0,0,0,1
        MDBottomNavigationItem:
            name:'screen_1'
            icon: 'home-outline'
            ScreenManager:
                HomeScreen:
                    id:home_screen
                    name:'home_screen'
                CategoriesScreen:
                    id:categories_screen
                    name:'categories_screen'
                ProductScreen:
                    id:product_screen
                    name:'product_screen'
        MDBottomNavigationItem:
            name:'screen_2'
            icon: 'magnify'
            on_tab_press:search_screen.append_data()
            ScreenManager:
                SearchScreen:
                    id:search_screen
                    name:'search_screen'
                DetailScreen:
                    name:'detail_page'
        MDBottomNavigationItem:
            name:'screen_3'
            icon: 'basket-outline'
        MDBottomNavigationItem:
            name:'screen_4'
            icon: 'account-outline'