<HomeScreen>:
    ScrollView:
        dot_scroll_x:False
        MDList:
            padding:[15,10]
            spacing:20
            MDLabel:
                size_hint_y:None
                height:self.texture_size[1]
                text:'Home'
                font_size:32
            MDBoxLayout:
                adaptive_height:True
                orientation:'vertical'
                ScrollView:
                    id:scroll_sale
                    do_scroll_y: False
                    size_hint_y: None
                    height:root.height*0.15
                    bar_width:0
                    on_scroll_start:root.slide_widget(*args)
                    MDGridLayout:
                        id: grid
                        rows: 1
                        cols:4
                        size_hint_y:None
                        height:root.height*0.15
                        size_hint_x: None
                        width: self.minimum_width
                        spacing:10
                        PromoteCard:
                            text:'Bose Home Speaker'
                            second_text:'USD 279'
                            img_source:'assets/images/Bose speaker.png'
                        PromoteCard:
                            text:'LG Gram 17'
                            second_text: "USD 1399"
                            img_source:'assets/images/Lg gram.png'
                AnchorLayout:
                    anchor_x: 'center'
                    size_hint_y:None
                    height:root.height*0.05
                    MDBoxLayout:
                        id:dot_scroll
                        orientation:'horizontal'
                        adaptive_size:True
                        pos_hint:{'center_x':0.5}
                        MDIcon:
                            rank:0
                            size_hint_x: None
                            -width:20
                            icon:'circle-medium'
                            color:hex("#A7A9BE")
                        MDIcon:
                            rank:1
                            size_hint_x: None
                            -width:20
                            icon:'circle-medium'
                            color:hex("#A7A9BE")
                            opacity: 0.3
                        MDIcon:
                            rank:2
                            size_hint_x: None
                            -width:20
                            icon:'circle-medium'
                            color:hex("#A7A9BE")
                            opacity: 0.3
                        MDIcon:
                            rank:3
                            size_hint_x: None
                            -width:20
                            icon:'circle-medium'
                            color:hex("#A7A9BE")
                            opacity: 0.3
            MDBoxLayout:
                orientation:'horizontal'
                size_hint_y:None
                height:root.height*0.1
                UnderIconButton:
                    btn_icon:'apps'
                    under_text:'Categories'
                    icon_press:root.switch_screen
                UnderIconButton:
                    btn_icon:'star-outline'
                    under_text:'Favorites'
                UnderIconButton:
                    btn_icon:'cake'
                    under_text:'Grifts'
                UnderIconButton:
                    btn_icon:'account-group-outline'
                    under_text:'Best selling'
            Label:
                text:'Sales'
                font_size:24
                size_hint_y: None
                markup:True
                color:0,0,0,1
                height:self.texture_size[1]
            MDGridLayout:
                cols:2
                size_hint_y: None
                height:root.height*0.5
                spacing:20
                SalesFlatButton:
                    img_source:'assets/images/Smartphone picture.png'
                    product_name:'Smartphones'
                    cheapen_text:'-50%'
                SalesFlatButton:
                    img_source:'assets/images/Monitor picture.png'
                    product_name:'Monitor'
                    cheapen_text:'-50%'