<SearchScreen>:
    on_enter:
        search_field.focus = True

    MDBoxLayout:
        orientation:"vertical"
        MDTopAppBar:
            elevation:4
            left_action_items:[["left-arrow",lambda *arg: root.switch_to("home_screen")]]
        MDSeparator:
            color:[0,0,0,0]
            height:dp(10)
        MDBoxLayout:
            orientation:'vertical'
            padding:[20,0]
            MDTextField:
                id:search_field
                halign:'center'
                on_text:
                    root.search_thread(self.text,rv).start()
            RecycleView:
                id:rv
                bar_width: 0
                bar_color: 0,0,0,0
                viewclass:'Label'
                RecycleBoxLayout:
                    default_size:None,None
                    default_size_hint:1,None
                    orientation:'vertical'
                    size_hint_y:None
                    spacing:dp(5)
                    height:self.minimum_height


