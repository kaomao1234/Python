#: import get_color_from_hex kivy.utils.get_color_from_hex
<IntroScreen@MDScreen>:
    name:'intro_screen'
    sukumvit_font:'font/SukhumvitSet-Medium'
    black:get_color_from_hex("#000000")
    red:(1.0, 0.0, 0.0, 1.0)
    dr_white:get_color_from_hex("#FAFAFA")
    MDBoxLayout:
        orientation: 'vertical'
        padding:[20,20]
        MDBoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: get_color_from_hex("#000000")
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            MDLabel:
                size_hint_y:None
                text: 'CafeHeap'
                halign:'center'
                theme_text_color:'Custom'
                text_color:root.black
                font_style:'H3'
                font_name: root.sukumvit_font
            MDLabel:
                size_hint_y:None
                text: 'กรุณาระบุจำนวนโต๊ะ'
                halign:'center'
                theme_text_color:'Custom'
                text_color:root.black
                font_style:'H6'
                font_name: root.sukumvit_font
            AnchorLayout:
                anchor_x: 'center'
                size_hint_y:None
                MDTextField:
                    id:field_tables
                    font_name_helper_text:root.sukumvit_font
                    helper_text:"Only 20 numbers can be entered" if self.text.isdigit() and int(self.text) > 20 else 'must not be negative numbers.' if '-' in self.text else 'ok'
                    on_focus: setattr(self,'error',True) if self.text.isdigit() and int(self.text) > 20 else setattr(self,'error',True)  if '-' in self.text else setattr(self,'error',False)
                    line_color_normal:root.black
                    line_color_focus:root.black
                    halign:'center'
                    input_filter:'int'
                    text_color_focus: root.black
                    helper_text_mode: "on_error"
                    width:200
                    size_hint_x:None
            AnchorLayout:
                anchor_x: 'center'
                MDRoundFlatButton:
                    text: "ตกลง"
                    text_color: root.black
                    line_color:root.black
                    font_name:root.sukumvit_font
                    on_press:root.on_press()
                    size_hint: None, None
                    -height:40
                    -width:200